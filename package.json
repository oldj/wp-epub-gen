{
  "name": "wp-epub-gen",
  "version": "0.3.0",
  "description": "Epub generator.",
  "main": "build/index.js",
  "module": "build/index.mjs",
  "types": "build/index.d.ts",
  "scripts": {
    "tsc": "tsc",
    "test": "vitest --watch=false run",
    "tt": "npm run build && node ./test/tt.js",
    "build": "cross-env NODE_ENV=production vite build --config vite.config.ts",
    "build:0": "rm -rf ./build && tsc",
    "bt": "npm run build && npm run test",
    "w": "tsc -w",
    "p": "npm run build && npm run test && npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oldj/wp-epub-gen.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/oldj/wp-epub-gen/issues"
  },
  "homepage": "https://github.com/oldj/wp-epub-gen#readme",
  "dependencies": {
    "archiver": "^7.0.1",
    "cheerio": "^1.1.2",
    "diacritics": "^1.3.0",
    "ejs": "^3.1.10",
    "entities": "^6.0.1",
    "fs-extra": "^11.3.0",
    "mime": "^4.0.7",
    "superagent": "^10.2.3",
    "uslug": "^1.0.4",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.3",
    "@types/cheerio": "^1.0.0",
    "@types/diacritics": "^1.3.3",
    "@types/ejs": "^3.1.5",
    "@types/fs-extra": "^11.0.4",
    "@types/mime": "^4.0.0",
    "@types/superagent": "^8.1.9",
    "@types/uslug": "^1.0.4",
    "@types/uuid": "^10.0.0",
    "cross-env": "^10.0.0",
    "vitest": "^2.1.8",
    "prettier": "^3.6.2",
    "ts-loader": "^9.5.2",
    "tsconfig-paths": "^4.2.0",
    "@vitest/ui": "^2.1.8",
    "typescript": "^5.8.3",
    "vite": "^7.0.6",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
